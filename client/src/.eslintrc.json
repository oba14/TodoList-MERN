{
  "env": {
      "browser": true,
      "es6": true,
      "node": true,
      "mocha": true,
      "commonjs": true,
      "jquery": true
  },
  "plugins": [
    "mocha",
    "react-hooks"
  ],
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 2017
  },
  "extends": "eslint:recommended",
  "rules": {
      "linebreak-style": [
        "error",
        "unix"
      ],
      "quotes": [
        "error",
        "single"
      ],
      "semi": [
        "error",
        "always"
      ],
      "react-hooks/rules-of-hooks": "error", // Checks rules of Hooks
      "react-hooks/exhaustive-deps": "warn" // Checks effect dependencies
  }
}